<Window x:Class="kurs.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:kurs.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Учёт запасных частей:Авторизация" Height="350" Width="500"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Background="DimGray">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="Авторизация"
                           HorizontalAlignment="Center"
                           Margin="10"
                           FontWeight="Bold" FontSize="25"/>
                
                <TextBox x:Name="LoginTextBox"
                         Grid.Row="2"
                         Margin="10"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Логин"
                         materialDesign:HintAssist.IsFloating="True"
                         Text=""/>
                
                <PasswordBox x:Name="PasswordBox"
                             Grid.Row="3"
                             Margin="10"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="Пароль"
                             materialDesign:HintAssist.IsFloating="True"/>
                
                <Button x:Name="LoginButton"
                        Grid.Row="4"
                        Margin="10"
                        Content="Войти"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        HorizontalContentAlignment="Center"
                        Click="LoginButton_OnClick"
                        FontWeight="Bold"
                        Foreground="Black"/>
                
                <TextBlock Grid.Row="5"
                           Margin="10"
                           Text="Нет аккаунта?"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignSecondary700}"/>
                
                <Button Grid.Row="6"
                        x:Name="RegisterButton"
                        Margin="10"
                        Content="Зарегистрироваться"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalContentAlignment="Center"
                        Click="RegisterButton_OnClick"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignPrimary}"/>
        </Grid>
</Window>