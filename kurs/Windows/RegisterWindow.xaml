<Window x:Class="kurs.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:kurs.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Учёт запасных частей:Регистрация" Height="500" Width="500"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Background="DimGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Регистрация"
                   HorizontalAlignment="Center"
                   Margin="10"
                   FontWeight="Bold" FontSize="25"/>

        <TextBox x:Name="FirstNameTextBox"
                 Grid.Row="1"
                 Margin="10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Имя пользователя"/>

        <TextBox x:Name="LastNameTextBox"
                 Grid.Row="2"
                 Margin="10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Фамилия пользователя"/>

        <TextBox x:Name="EmailTextBox"
                 Grid.Row="3"
                 Margin="10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Почта пользователя"/>

        <PasswordBox x:Name="NewPasswordBox"
                     Grid.Row="4"
                     Margin="10"
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                     materialDesign:HintAssist.Hint="Введите пароль"/>

        <PasswordBox x:Name="ConfirmPasswordBox"
                     Grid.Row="5"
                     Margin="10"
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                     materialDesign:HintAssist.Hint="Подтвердите пароль"/>

        <Button x:Name="RegisterButton"
                Grid.Row="6"
                Margin="10"
                Content="Зарегистрироваться"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Foreground="Black"
                Click="RegisterButton_OnClick"/>

        <TextBlock Grid.Row="7"
                   Margin="10"
                   Text="Уже есть аккаунт?"
                   HorizontalAlignment="Center"/>

        <Button x:Name="LoginButton"
                Grid.Row="8"
                Margin="10"
                Content="Войти"
                Style="{StaticResource MaterialDesignFlatButton}"
                Click="LoginButton_OnClick"/>
    </Grid>
</Window>
